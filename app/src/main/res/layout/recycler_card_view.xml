<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        app:cardCornerRadius="10dp"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/thumbnail"
               android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/video_title"
                android:layout_margin="5dp"
                android:textColor="#000"
                android:layout_below="@id/thumbnail"
                android:textSize="20sp"
                android:text="Title : "/>

            <TextView
                android:layout_below="@+id/video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/channel_title"
                android:layout_margin="5dp"
                android:textSize="14sp"
                android:text="Channel Title: -"/>

         <!--   <TextView
                android:layout_below="@+id/channel_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/channel_id"
                android:textSize="15sp"
                android:layout_margin="5dp"
                android:text="Channel id: - "/>-->

            <TextView
                android:layout_below="@id/video_title"
                android:layout_toRightOf="@id/channel_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/published_time"
                android:textSize="14sp"
                android:layout_margin="5dp"
                android:text="published time"/>

    <!--        <TextView
                android:layout_below="@+id/published_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/published_at"
                android:textSize="15sp"
                android:layout_margin="5dp"
                android:text="published At"/>-->

    <!--        <TextView
                android:layout_below="@+id/published_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:textSize="15sp"
                android:layout_margin="5dp"
                android:text="Description"/>-->


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>